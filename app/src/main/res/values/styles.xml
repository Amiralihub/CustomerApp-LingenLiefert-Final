<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item> <!-- Größere Schriftgröße, z.B. 18sp -->
        <item name="android:textColor">@color/black</item> <!-- Andere Textfarbe, z.B. @color/red -->
    </style>

    <style name="RoundedCorners">
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="RoundedCornersQR">
        <item name="android:background">@drawable/rounded_background_with_alpha</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="circularImage">
        <item name="cornerSize">10%</item>
    </style>

    <style name="circularImageArrow">
        <item name="cornerSize">30%</item>
    </style>

</resources>