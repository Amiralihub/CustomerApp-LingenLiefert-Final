<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Screen">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButtonToSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="12dp"
            android:backgroundTint="@color/lavender"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/informationTitle"
            android:textColor="@color/lavender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Impressum"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/generalsTextView"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allgemeine Informationen:\nDiese App wurde im Rahmen eines Softwareentwicklungsprojekt entwickelt"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/groupTextView"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Vertreten durch:\nAlaa Chraih\nAmirali Haghighatkhah\nChristian Minich\nJan Dettler\nRania Mohammad\nSadik Bajrami"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/copyrightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Â© 2023 LieferGruppe. Alle Rechte vorbehalten."
            android:textSize="15sp"
            style="@style/Text"
            android:layout_gravity="bottom"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lieferlogoImageView"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/lieferlogo"/>

    </LinearLayout>

</LinearLayout>